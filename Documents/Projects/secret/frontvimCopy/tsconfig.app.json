/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "",
    "paths": {
      "@app*": ["src/app*"],
      "@core*": ["src/app/core/*"],
      "@shared*": ["src/app/shared/*"],
      "@env*": ["src/environments/*"],
      "@modules*": ["src/app/modules/*"],
      "@data*": ["src/app/data/*"],
      "@layouts*": ["src/app/layouts/*"],
      "@types*": ["src/app/data/types/*"],
      "@assets*": ["src/assets"],
    },
    "outDir": "./out-tsc/app",
    "types": ["node"]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ]
}
